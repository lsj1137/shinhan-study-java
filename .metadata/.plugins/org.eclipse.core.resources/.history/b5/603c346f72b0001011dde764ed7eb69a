package com.shinhan.day01;

public class VarPractice {
	
	// 기본형: boolean, byte, short, char, int, long, float, double
	// 정수 크기 순: byte=1, short=2, char=2, int=4, long=8 (char는 음수가 없음)
	// 실수 크기 순: float=4, double=8

	public static void main(String[] args) {
		f1();
		f2();
		f3();
		f4();
		f5();

	}

	private static void f1() {
		System.out.println("byte");
		byte var1 = Byte.MAX_VALUE;
		System.out.println(var1);
		var1++;
		System.out.println(var1);
	}
	
	private static void f2() {
		System.out.println("short");
		short var1 = Short.MAX_VALUE;
		System.out.println(var1);
		var1++;
		System.out.println(var1);
		
	}
	
	private static void f3() {
		System.out.println("char");
		char var1 = Character.MAX_VALUE;
		System.out.println(var1);
		var1++;
		System.out.println(var1);
		
	}
	
	private static void f4() {
		System.out.println("int");
		int var1 = Integer.MAX_VALUE;
		System.out.println(var1);
		var1++;
		System.out.println(var1);
		
	}
	
	private static void f5() {
		System.out.println("long");
		long var1 = Long.MAX_VALUE;
		System.out.println(var1);
		var1++;
		System.out.println(var1);
		
	}

}
