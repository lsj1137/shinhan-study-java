package com.shinhan.day01;

public class VarScope {

	public static void main(String[] args) {
		int a1 = 100;
		{
			int a2 = 200;
			{
				int a3 = 300;
				System.out.println(" " + a1 + " " +  a2 + " " + a3);
			}
			System.out.println(" " + a1 + " " +  a2 );
		}
		System.out.println(" " + a1);

	}

}
