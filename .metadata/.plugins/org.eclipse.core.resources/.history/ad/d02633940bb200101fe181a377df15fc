	private static void gcd(int i, int j) {
		// TODO Auto-generated method stub
		
	}
	
	private static void q8() {
		gcd(2,5);
		gcd(5,15);
		gcd(250,30);
		
	}

	public static  void numDay(int mon){
		int nod = switch (mon) {
		case 1, 3, 5, 7, 8, 10, 12 -> 31;
		case 4, 6, 9, 11 -> 30;
		case 2 -> 28;
		default -> -1;
		};
		if (nod==-1) {
			System.out.println(mon+"월은 존재하지 않습니다. 다시 입력하세요.");
		} else {
			System.out.println(nod);
		}
	}
	
	private static void q7() {
		Scanner key = new Scanner(System.in);
		System.out.println("월 입력 : ");
		int month = key.nextInt();
		 
		numDay(month);
		key.close();
	}

	private static void q6() {
		boolean isLeapYear = false;
		int result = 28;
		Scanner sc = new Scanner(System.in);
		System.out.print("년도를 입력하세요 : ");
		int year = Integer.parseInt(sc.nextLine());
		if ((year%4==0 && year%100!=0) || year%400==0) {
			isLeapYear = true;
		}
		if (isLeapYear) {
			result=29;
		}
		System.out.println(year+"년 2월의 말일은 "+result+"일 입니다");
		sc.close();
	}

	private static void q5() {
		int MAX = 15;
		int curValue = 1, gap = 1, total = 0;
		for (int i=0; i<MAX; i++) {
			total += curValue;
			curValue += gap++;
		}
		System.out.println(MAX+"번째까지의 합 : "+total);
	}

	private static void q4() {
		Scanner sc = new Scanner(System.in);
		System.out.print("양의 정수를 입력하세요 : ");
		int num = Integer.parseInt(sc.nextLine());
		int count=0, total=0;
		for (int i=1; i<1001; i++) {
			if (i%num==0) {
				count += 1;
				total += i;
			}
		}
		System.out.println(num+"의 배수 개수 = "+count);
		System.out.println(num+"의 배수 합 = "+total);
		sc.close();
	}

	private static void q3() {
		Scanner sc = new Scanner(System.in);
		System.out.print("1보다 크고 10보다 작은 정수를 입력하세요. : ");
		int num = Integer.parseInt(sc.nextLine());
		if (num<2 || num>9) {
			System.out.println("잘못된 숫자가 입력되었습니다.");
			sc.close();
			return;
		}
		for (int i=1; i<num+1; i++) {
			int total = 1;
			for (int j=1; j<i+1; j++) {
				total *= j;
			}
			System.out.printf("%d ! = %d\n", i, total);
		}
		sc.close();
		
	}

	private static void q2() {
		Scanner sc = new Scanner(System.in);
		System.out.print("2 ~ 100사이의 정수를 입력하세요. : ");
		int num = Integer.parseInt(sc.nextLine());
		if (num<2 || num>100) {
			System.out.println("잘못된 숫자가 입력되었습니다.");
			sc.close();
			return;
		}
		for (int i=2; i<num; i++) {
			if (num%i==0) {
				System.out.println(num+"는(은) 소수가 아닙니다.");
				sc.close();	
				return;
			}
		}
		System.out.println(num+"는(은) 소수입니다.");
		sc.close();	
	}

	private static void q1() {
		Scanner sc = new Scanner(System.in);
		System.out.print("1보다 크고 10보다 작은 정수를 입력하세요. : ");
		int dan = Integer.parseInt(sc.nextLine());
		if (dan<2 || dan>9) {
			System.out.println("잘못된 숫자가 입력되었습니다.");
			sc.close();
			return;
		}
		for (int i=1; i<10; i++) {
			System.out.printf("%d * %d = %d\n", dan, i, dan*i);
		}
		sc.close();
	}
}
